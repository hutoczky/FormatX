<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Global background brush used by the app layout -->
  <ImageBrush x:Key="AppBackgroundBrush"
              ImageSource="ms-appx:///Assets/Backgrounds/smoky_wave_bg.png"
              Stretch="UniformToFill"
              AlignmentX="Center"
              AlignmentY="Center"/>
  <ImageBrush x:Key="BackgroundBrush"
              ImageSource="ms-appx:///Assets/Backgrounds/smoky_wave_bg.png"
              Stretch="UniformToFill"
              AlignmentX="Center"
              AlignmentY="Center"/>
  <SolidColorBrush x:Key="BackgroundBrushFallback" Color="#FF0E1525"/>
  <SolidColorBrush x:Key="ForegroundBrush" Color="#FFE5E7EB"/>

  <SolidColorBrush x:Key="HealthGreen" Color="#FF2ECC71"/>
  <SolidColorBrush x:Key="HealthYellow" Color="#FFF1C40F"/>
  <SolidColorBrush x:Key="HealthRed" Color="#FFE74C3C"/>

  <!-- Premium Theme Tokens -->
  <SolidColorBrush x:Key="BaseBackground" Color="#FF161A20"/>
  <SolidColorBrush x:Key="CardBackground" Color="#1AFFFFFF"/>
  <SolidColorBrush x:Key="PrimaryAccent" Color="#FF0078D4"/>
  <SolidColorBrush x:Key="SecondaryAccent" Color="#FF1F6FEB"/>
  <SolidColorBrush x:Key="MutedText" Color="#CCFFFFFF"/>
  <x:Double x:Key="Heading1Size">22</x:Double>
  <x:Double x:Key="Heading2Size">18</x:Double>
  <x:Double x:Key="BodySize">14</x:Double>

  <Style x:Key="HealthBadgeStyle" TargetType="Border">
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Padding" Value="6,2"/>
    <Setter Property="Background" Value="{StaticResource HealthGreen}"/>
  </Style>

  <!-- Elevated Card Style for premium look -->
  <Style x:Key="CardControlStyle" TargetType="Border">
    <Setter Property="CornerRadius" Value="10"/>
    <Setter Property="Background" Value="{StaticResource CardBackground}"/>
    <Setter Property="BorderBrush" Value="#22FFFFFF"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="12"/>
  </Style>

  <!-- Toggle style to match secondary action buttons -->
  <Style x:Key="ActionToggleStyle" TargetType="ToggleButton">
    <Setter Property="MinWidth" Value="{StaticResource DefaultButtonMinWidth}"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="CornerRadius" Value="8"/>
    <Setter Property="Background" Value="#22000000"/>
    <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
    <Setter Property="BorderBrush" Value="#33FFFFFF"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
  </Style>

  <DataTemplate x:Key="HealthBadgeTemplate">
    <Border Style="{StaticResource HealthBadgeStyle}">
      <StackPanel Orientation="Horizontal" Spacing="6">
        <Ellipse Width="10" Height="10" Fill="{Binding}"/>
        <TextBlock Text="Állapot"/>
      </StackPanel>
    </Border>
  </DataTemplate>

  <!-- Unified UI design tokens -->
  <Thickness x:Key="FormControlMargin">0,4,0,4</Thickness>
  <x:Double x:Key="DefaultButtonMinWidth">140</x:Double>
  <CornerRadius x:Key="ButtonCornerRadius">8</CornerRadius>

  <!-- Accent button style used across the app -->
  <Style x:Key="AccentButtonStyle" TargetType="Button">
    <Setter Property="MinWidth" Value="{StaticResource DefaultButtonMinWidth}"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="CornerRadius" Value="{StaticResource ButtonCornerRadius}"/>
    <Setter Property="Background" Value="{StaticResource PrimaryAccent}"/>
    <Setter Property="Foreground" Value="#FFFFFFFF"/>
    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccent}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
  </Style>

  <!-- Secondary action button style -->
  <Style x:Key="ActionButtonStyle" TargetType="Button">
    <Setter Property="MinWidth" Value="{StaticResource DefaultButtonMinWidth}"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="CornerRadius" Value="{StaticResource ButtonCornerRadius}"/>
    <Setter Property="Background" Value="#22000000"/>
    <Setter Property="Foreground" Value="#FFFFFFFF"/>
    <Setter Property="BorderBrush" Value="#33FFFFFF"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
  </Style>

  <!-- Tertiary ghost button for low-emphasis actions -->
  <Style x:Key="TertiaryButtonStyle" TargetType="Button">
    <Setter Property="MinWidth" Value="{StaticResource DefaultButtonMinWidth}"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="CornerRadius" Value="{StaticResource ButtonCornerRadius}"/>
    <Setter Property="Background" Value="Transparent"/>
    <Setter Property="Foreground" Value="{StaticResource MutedText}"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
  </Style>

  <!-- Form field label style for consistent appearance -->
  <Style x:Key="FormLabelTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="Opacity" Value="0.9"/>
    <Setter Property="Margin" Value="{StaticResource FormControlMargin}"/>
  </Style>

  <!-- TextBox default style tweaks for spacing -->
  <Style TargetType="TextBox">
    <Setter Property="Margin" Value="{StaticResource FormControlMargin}"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
  </Style>

  <!-- ComboBox default style tweaks for spacing -->
  <Style TargetType="ComboBox">
    <Setter Property="Margin" Value="{StaticResource FormControlMargin}"/>
    <Setter Property="HorizontalAlignment" Value="Left"/>
  </Style>
</ResourceDictionary>
