<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Keep existing background image if present, otherwise fallback to dark color -->
  <ImageBrush x:Key="BackgroundBrush"
              ImageSource="ms-appx:///Assets/Backgrounds/smoky_wave_bg.png"
              Stretch="UniformToFill"
              AlignmentX="Center"
              AlignmentY="Center"/>
  <!-- BackgroundBrush is used by MainWindow for custom background images -->
  <SolidColorBrush x:Key="BackgroundBrushFallback" Color="#0E1525"/>

  <!-- Centralized color palette (exact provided values) -->
  <SolidColorBrush x:Key="PrimaryDarkBrush" Color="#0F1724" />
  <SolidColorBrush x:Key="AccentOrangeBrush" Color="#FF7A18" />
  <!-- CardBackgroundBrush uses #111827 with ~10% opacity overlay -->
  <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1A111827" />
  <SolidColorBrush x:Key="SurfaceBrush" Color="#0B1220" />
  <SolidColorBrush x:Key="MutedTextBrush" Color="#9CA3AF" />
  <SolidColorBrush x:Key="WhiteTextBrush" Color="#FFFFFF" />

  <!-- Reusable styles -->
  <Style x:Key="AccentButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{StaticResource AccentOrangeBrush}" />
    <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}" />
    <Setter Property="Padding" Value="10,6" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="HorizontalAlignment" Value="Left" />
    <!-- Template with hover/pressed states placed below -->
    <Setter Property="RenderTransform">
      <Setter.Value>
        <CompositeTransform ScaleX="1" ScaleY="1"/>
      </Setter.Value>
    </Setter>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Grid>
            <Border x:Name="RootBorder" Background="{TemplateBinding Background}" CornerRadius="8">
              <Border.RenderTransform>
                <CompositeTransform ScaleX="1" ScaleY="1"/>
              </Border.RenderTransform>
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="6,2"/>
            </Border>

            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup>
                <VisualState x:Name="Normal" />
                <VisualState x:Name="PointerOver">
                  <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)" To="1.03" Duration="0:0:0.12" />
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)" To="1.03" Duration="0:0:0.12" />
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Pressed">
                  <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleX)" To="0.99" Duration="0:0:0.06" />
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.ScaleY)" To="0.99" Duration="0:0:0.06" />
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Sidebar button style -->
  <Style x:Key="SidebarButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}" />
    <Setter Property="HorizontalContentAlignment" Value="Left" />
    <Setter Property="Padding" Value="8" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="6" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border x:Name="Accent" Grid.Column="0" Background="Transparent">
              <Border.RenderTransform>
                <TranslateTransform Y="0" />
              </Border.RenderTransform>
            </Border>
            <Border Grid.Column="1" Background="Transparent" Padding="6">
              <ContentPresenter VerticalAlignment="Center"/>
            </Border>

            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup>
                <VisualState x:Name="Normal" />
                <VisualState x:Name="PointerOver">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Accent" Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="#22000000" />
                    </ObjectAnimationUsingKeyFrames>
                    <DoubleAnimation Storyboard.TargetName="Accent" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)" To="-2" Duration="0:0:0.08"/>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="SidebarHeaderStyle" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Margin" Value="6,8,6,4" />
  </Style>

  <Style x:Key="CardPanelStyle" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource CardBackgroundBrush}" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Padding" Value="12" />
    <Setter Property="BorderBrush" Value="#0FFFFFFF" />
    <Setter Property="BorderThickness" Value="1" />
    <!-- subtle default elevation via transform -->
    <Setter Property="RenderTransform">
      <Setter.Value>
        <TranslateTransform X="0" Y="-2" />
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Window control (min/max/close) small icon buttons -->
  <Style x:Key="WindowControlButtonStyle" TargetType="Button">
    <Setter Property="Width" Value="36" />
    <Setter Property="Height" Value="28" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="6,2" />
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="Button">
          <Grid>
            <Border x:Name="Root" Background="{TemplateBinding Background}" CornerRadius="6">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <VisualStateManager.VisualStateGroups>
              <VisualStateGroup>
                <VisualState x:Name="Normal"/>
                <VisualState x:Name="PointerOver">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Root" Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="#221FFFFFFF" />
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>
                <VisualState x:Name="Pressed">
                  <Storyboard>
                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Root" Storyboard.TargetProperty="Background">
                      <DiscreteObjectKeyFrame KeyTime="0" Value="#33111111" />
                    </ObjectAnimationUsingKeyFrames>
                  </Storyboard>
                </VisualState>
              </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
          </Grid>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="RoundedTextBoxStyle" TargetType="TextBox">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
    <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}" />
    <Setter Property="Padding" Value="8" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>

  <Style x:Key="RoundedComboBoxStyle" TargetType="ComboBox">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
    <Setter Property="Foreground" Value="{StaticResource WhiteTextBrush}" />
    <Setter Property="Padding" Value="6" />
  </Style>

  <Style x:Key="ThinProgressBarStyle" TargetType="ProgressBar">
    <Setter Property="Height" Value="6" />
    <Setter Property="Foreground" Value="{StaticResource AccentOrangeBrush}" />
    <Setter Property="Background" Value="#202020" />
  </Style>

</ResourceDictionary>
