<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Premium color palette -->
  <SolidColorBrush x:Key="--PrimaryAccent" Color="#0078D4"/>
  <SolidColorBrush x:Key="--Bg" Color="#121212"/>
  <SolidColorBrush x:Key="--CardBg" Color="#1E1E1E"/>
  <SolidColorBrush x:Key="--TextPrimary" Color="#E6E6E6"/>
  <SolidColorBrush x:Key="--Muted" Color="#9AA3AC"/>

  <!-- Radii -->
  <CornerRadius x:Key="ButtonCornerRadius">8</CornerRadius>
  <CornerRadius x:Key="CardCornerRadius">10</CornerRadius>

  <!-- Typography -->
  <Style x:Key="H1" TargetType="TextBlock">
    <Setter Property="FontSize" Value="22"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="{StaticResource --TextPrimary}"/>
  </Style>
  <Style x:Key="H2" TargetType="TextBlock">
    <Setter Property="FontSize" Value="18"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{StaticResource --TextPrimary}"/>
  </Style>
</ResourceDictionary>
